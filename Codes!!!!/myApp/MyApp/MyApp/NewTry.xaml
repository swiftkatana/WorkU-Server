            <Label Text="Meditate" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" TextColor="White" FontSize="15" BackgroundColor="Blue" />
            <Label Text="Themes" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" FontSize="15" BackgroundColor="CadetBlue" />
        </StackLayout>
          
        


        </AbsoluteLayout>

   
   
    
    
